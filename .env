# MySQL / XAMPP configuration for local dev
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=planning

# Email (leave blank to use dev-mode where codes are returned in API responses)
# Option 1: Use a named service (Gmail). Uncomment and set these if you use a service.
# EMAIL_SERVICE=gmail
# EMAIL_USER=your@gmail.com
# EMAIL_PASS=your-gmail-app-password

# Option 2 (recommended for testing): explicit SMTP settings (Mailtrap, SendGrid SMTP, etc.)
SMTP_HOST=
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false # true for TLS on standard SMTPS port 465

# Email sender address shown to recipients
EMAIL_FROM=no-reply@example.com
